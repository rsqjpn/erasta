{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Laravel",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://erastaweb.vercel.app/",
        "APP_KEY": "base64:YOUR_APP_KEY_HERE",

        "DB_CONNECTION": "mysql",
        "DB_HOST": "127.0.0.1",
        "DB_PORT": "3306",
        "DB_DATABASE": "master_erastae",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "",

        "CACHE_DRIVER": "file",
        "SESSION_DRIVER": "file",
        "QUEUE_CONNECTION": "sync",

        "MAIL_MAILER": "smtp",
        "MAIL_HOST": "smtp.mailtrap.io",
        "MAIL_PORT": "2525",
        "MAIL_USERNAME": "your-mailtrap-username",
        "MAIL_PASSWORD": "your-mailtrap-password",
        "MAIL_ENCRYPTION": "tls",
        "MAIL_FROM_ADDRESS": "your-email@example.com",
        "MAIL_FROM_NAME": "Laravel"
    }
}
